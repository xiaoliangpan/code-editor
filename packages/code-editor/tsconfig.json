{
  "compilerOptions": {
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true,
    "module": "es2015",
    "moduleResolution": "node",
    // enum 等类型 的导出可以使用了
    "esModuleInterop": true,
    "target": "es6"
  },
  "include": [
    "./src/*.ts",
    "./src/*.tsx",
    "./src/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}